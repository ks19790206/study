<html>
 <hesd>
   <meta charset="UTF-8">
   <title>社員表</title>
   <link rel="stylesheet" href="style.css">
 </head>
 <body>
   <div class="container">
     <h1>社員一覧</h1>
     <p><%= @now %></p>
     <% if @message %>
       <div class="message"><%= @message %></div>
     <% end %>
    <footer>
     <a href="adress.html">会社所在地</a>
    </footer>
    <div>
     <a href="/form_new">新入社員新規登録</a>
    </div>
    <table border="1">
        <caption>連絡先一覧</caption>
      <thead>
        <tr>
          <th>社員番号</th>
          <th>名前</th>
          <th>Email</th>
          <th>住所</th>
          <th>Tel</th>
        </tr>
      </thead>
      <tbody>
       <% @data.each do |data| %>
        <tr>
         <td><%= data.id %></td>
         <td><%= data.name %></td>
         <td><%= data.email %></td>
         <td><%= data.adress %></td>
         <td><%= data.tel %></td>
        </tr>
       <% end %>
      </tbody>
    </table>
  </div>
 </body>
</html>
